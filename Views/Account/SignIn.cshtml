@model SignInModel
@{
    ViewData["title"] = "SignIn manager";
}
<div class="form-signin text-center w-50 m-auto p-5">
    <form asp-controller="Account" asp-action="SignIn" method="post">
        <svg width="60" height="60" fill="currentColor" class="bi bi-stack d-inline-block align-text-top" viewBox="0 0 16 16">
            <path d="m14.12 10.163 1.715.858c.22.11.22.424 0 .534L8.267 15.34a.598.598 0 0 1-.534 0L.165 11.555a.299.299 0 0 1 0-.534l1.716-.858 5.317 2.659c.505.252 1.1.252 1.604 0l5.317-2.66zM7.733.063a.598.598 0 0 1 .534 0l7.568 3.784a.3.3 0 0 1 0 .535L8.267 8.165a.598.598 0 0 1-.534 0L.165 4.382a.299.299 0 0 1 0-.535L7.733.063z"/>
            <path d="m14.12 6.576 1.715.858c.22.11.22.424 0 .534l-7.568 3.784a.598.598 0 0 1-.534 0L.165 7.968a.299.299 0 0 1 0-.534l1.716-.858 5.317 2.659c.505.252 1.1.252 1.604 0l5.317-2.659z"/>
        </svg>
        <h1 class="h3 mb-3 fw-normal">Please sign-in</h1>
        <div class="form-floating mt-2">
            <input asp-for="UserEmail" class="form-control" placeholder=" ">
            <label asp-for="UserEmail">@Html.DisplayNameFor(m => m.UserEmail)</label>
        </div>
        <div class="form-floating mt-2">
            <input asp-for="UserPassword" class="form-control" placeholder=" ">
            <label asp-for="UserPassword">@Html.DisplayNameFor(m => m.UserPassword)</label>
        </div>
        <div class="checkbox mt-2">
            <label>
                <input asp-for="RememberMe" > @Html.DisplayNameFor(m => m.RememberMe)
            </label>
        </div>
        <button class="w-100 btn btn-outline-dark mt-4" type="submit">Login</button>
    </form>
</div>